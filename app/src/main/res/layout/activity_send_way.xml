<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">
<include layout="@layout/layout_back_title2"/>
    <LinearLayout
        android:id="@+id/ll_send_to_hall"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/my_item_bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textSendToHall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="17dp"
            android:layout_weight="1"
            android:text="送车到网点"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="17dp"
            android:src="@drawable/right_arrow" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="12dp"
        android:text="网点地址:"
        android:textColor="@color/light_dark_gray"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/textHall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="12dp"
        android:text="北京顺义区33号"
        android:textColor="@color/light_dark_gray"
        android:textSize="12sp" />
    <LinearLayout
        android:id="@+id/ll_chang_jiu_get"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/my_item_bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textChangJiuGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="17dp"
            android:text="长久取车"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/textAddressDetail"
            android:gravity="end|right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="start"
            android:textColor="@color/light_dark_gray"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="17dp"
            android:src="@drawable/right_arrow" />
    </LinearLayout>
</LinearLayout>