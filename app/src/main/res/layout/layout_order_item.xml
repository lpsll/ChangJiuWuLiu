<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:textColor="@color/black"
            android:text="目的地:  " />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="9dp"
            android:textColor="@color/black"
            android:text="订单编号:  " />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:text="生成日期:  " />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="出发地:  " />

        <TextView
            android:id="@+id/order_no"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:textColor="@color/order" />

        <TextView
            android:id="@+id/order_destination"
            android:singleLine="true"
            android:layout_marginRight="100dp"
            android:text=""
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:textColor="@color/order" />

        <TextView
            android:id="@+id/order_departure"
            android:singleLine="true"
            android:layout_marginRight="100dp"
            android:text=""
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/order_destination"
            android:layout_alignStart="@+id/order_destination"
            android:layout_centerVertical="true"
            android:textColor="@color/order" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/order_no"
            android:layout_alignStart="@+id/order_no"
            android:textColor="@color/order" />

        <TextView
            android:id="@+id/order_cancel"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/order_btn"
            android:text="取消订单"
            android:textColor="@color/orders_gray_text"
            android:textSize="@dimen/min_size"
            android:layout_below="@+id/order_date"
            android:layout_alignRight="@+id/order_state"
            android:layout_alignEnd="@+id/order_state"/>

        <TextView
            android:id="@+id/order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 订单状态"
            android:textColor="@color/rmb"
            android:layout_marginRight="22dp"
            android:layout_alignTop="@+id/order_no"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


</LinearLayout>