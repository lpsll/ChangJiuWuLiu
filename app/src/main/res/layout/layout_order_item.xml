<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/textLabelNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:text="订单编号:  " />
        <TextView
            android:id="@+id/textLabelToAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLabelNumber"
            android:layout_alignLeft="@+id/textLabelNumber"
            android:layout_alignStart="@+id/textLabelNumber"
            android:textColor="@color/black"
            android:layout_marginBottom="9dp"
            android:text="目的地:  " />
        <TextView
            android:id="@+id/textLabelFromAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLabelToAddress"
            android:layout_alignLeft="@+id/textLabelNumber"
            android:layout_alignStart="@+id/textLabelNumber"
            android:textColor="@color/black"
            android:layout_marginBottom="9dp"
            android:text="出发地:  " />
        <TextView
            android:id="@+id/textLabelTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLabelFromAddress"
            android:layout_alignLeft="@+id/textLabelNumber"
            android:layout_alignStart="@+id/textLabelNumber"
            android:textColor="@color/black"
            android:text="生成日期:  " />

        <TextView
            android:id="@+id/order_no"
            android:text="EA9098889888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textLabelNumber"
            android:layout_alignBottom="@+id/textLabelNumber"
            android:layout_toRightOf="@+id/textLabelNumber"
            android:textColor="@color/order" />

        <TextView
            android:id="@+id/order_destination"
            android:singleLine="true"
            android:layout_marginRight="100dp"
            android:text="BeiJing"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textLabelToAddress"
            android:layout_toEndOf="@+id/textLabelToAddress"
            android:layout_toRightOf="@+id/textLabelToAddress"
            android:textColor="@color/order" />

        <TextView
            android:id="@+id/order_departure"
            android:singleLine="true"
            android:layout_marginRight="100dp"
            android:text="LuoYang"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textLabelFromAddress"
            android:layout_toEndOf="@+id/textLabelFromAddress"
            android:layout_toRightOf="@+id/textLabelFromAddress"
            android:textColor="@color/order" />

        <TextView
            android:id="@+id/order_date"
            android:text="2016-09-01 10:25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textLabelTime"
            android:layout_toEndOf="@+id/textLabelTime"
            android:layout_toRightOf="@+id/textLabelTime"
            android:textColor="@color/order" />
        <TextView
            android:id="@+id/order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 订单状态"
            android:textColor="@color/rmb"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/order_no"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/order_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:background="@drawable/rectangle_white_with_red_line_shape"
            android:text="取消订单"
            android:textColor="@android:color/holo_red_light"
            android:layout_alignBottom="@+id/textLabelTime"
            android:layout_alignRight="@+id/order_state"
            android:layout_alignEnd="@+id/order_state"/>
    </RelativeLayout>
</LinearLayout>